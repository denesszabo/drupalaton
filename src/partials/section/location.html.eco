<div class="content container_12">      
  <div class="wrapper">
    <h2 class="section-title"><%= @labels['location'] %></h2>
    
    <p>
    <%= @conf.venue %>, <%= @conf.address %>. <br />
    <%= @conf.postcode %> <%= @conf.city %>,<br />
    <%= @conf.state %>,<br />
    GPS: <%= @conf.coordinates %>
    </p>
